{
  "version": 2,
  "builds": [
    {
      "src": "api/graphql.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30,
        "memory": 3008,
        "includeFiles": "src/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api/graphql",
      "methods": ["GET"],
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/metrics",
      "dest": "/api/graphql",
      "methods": ["GET"],
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/graphql",
      "dest": "/api/graphql",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/",
      "dest": "/api/graphql",
      "methods": ["GET"],
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "off"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "regions": ["iad1"]
}
