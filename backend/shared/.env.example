# Node Environment
NODE_ENV=development

# Database Configuration
# Regular database URL for Prisma Client
DATABASE_URL="postgresql://user:password@localhost:5432/astroshibapop?schema=public"

# Direct database URL for migrations (required for Prisma Accelerate)
# This bypasses Accelerate and connects directly to the database
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/astroshibapop?schema=public"

# Prisma Accelerate (Production)
# Replace DATABASE_URL with your Accelerate connection string:
# DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# Stellar/Soroban Configuration
STELLAR_NETWORK=testnet
STELLAR_RPC_URL="https://soroban-testnet.stellar.org:443"

# Contract Addresses
TOKEN_FACTORY_CONTRACT_ID="CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
AMM_FACTORY_CONTRACT_ID="CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# Redis/Cache (Optional)
# Option 1: Vercel KV (REST API)
KV_REST_API_URL="https://your-project.kv.vercel-storage.com"
KV_REST_API_TOKEN="your-kv-token"

# Option 2: Standard Redis or Upstash
REDIS_URL="redis://localhost:6379"

# API Configuration
API_PORT=4000
API_HOST=0.0.0.0
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# GraphQL Configuration
GRAPHQL_MAX_DEPTH=10
GRAPHQL_MAX_COMPLEXITY=1000
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
